	&& echo "423ba66fa168b7aeb8b4620c3e331f1bf1d59736aaaa72a8877c75f04d6a75b1  go$GO_VERSION.linux-armv6hf.tar.gz" | sha256sum -c - \
	&& tar -xzf "go$GO_VERSION.linux-armv6hf.tar.gz" -C /usr/local/go --strip-components=1 \
	&& rm -f go$GO_VERSION.linux-armv6hf.tar.gz

