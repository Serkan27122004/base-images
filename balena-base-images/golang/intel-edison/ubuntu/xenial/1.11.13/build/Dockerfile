	&& echo "282e20167a7aaaba7b23de980696e1944a004efd0079e80d675d66b263ef595b  go$GO_VERSION.linux-386.tar.gz" | sha256sum -c - \
	&& tar -xzf "go$GO_VERSION.linux-386.tar.gz" -C /usr/local/go --strip-components=1 \
